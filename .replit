modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "gitFull", "libiconv", "libxcrypt", "playwright-driver", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Frontend"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add fastapi uvicorn playwright beautifulsoup4 tiktoken numpy faiss-cpu && playwright install chromium && python main.py"
waitForPort = 8000

[[workflows.workflow]]
name = "React Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && npx vite --host 0.0.0.0 --port 5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "uv add fastapi uvicorn playwright beautifulsoup4 tiktoken numpy faiss-cpu && playwright install chromium && python main.py"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 80
